{
  "manifest_version": 3,
  "name": "My Momentum Style New Tab",
  "version": "1.0.0",
  "description": "React + TS 기반 모멘텀 스타일 새 탭 확장",
  "icons": {
    "128": "./icons/icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": ["storage", "alarms", "notifications"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
